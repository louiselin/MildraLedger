<!DOCTYPE html>
<html>

<head>
    <%- include('base/head') %>
        <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <header>
        <%- include('base/header', user) %>
    </header>
    <div class="container">

        <div class="page-header text-center">
            <h1><span class="fa fa-pencil fa-fw"></span>User Management</h1>
        </div>

        <div>
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th data-name="user_id">User ID</th>
                        <th data-name="account">Account</th>
                        <th data-name="permission">Permission</th>
                        <th data-name="eth_address">Eth Address</th>
                        <th data-name="registration_time">Registration Time</th>
                        <th data-name="last_login_time">Last Login</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th data-name="user_id">User ID</th>
                        <th data-name="account">Account</th>
                        <th data-name="permission">Permission</th>
                        <th data-name="eth_address">Eth Address</th>
                        <th data-name="registration_time">Registration Time</th>
                        <th data-name="last_login_time">Last Login</th>
                    </tr>
                </tfoot>
                <tbody></tbody>
            </table>
        </div>

    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            var table = $('#example').dataTable({
                ajax: {
                    url:'/api/users',
                    dataSrc: ''
                },
                columns: [
                    {data: 'user_id'},
                    {data: 'account'},
                    {data: 'permission'},
                    {data: 'eth_address'},
                    {data: 'registration_time'},
                    {data: 'last_login_time'}
                ]
            });


        });
    </script>
</body>

</html>
